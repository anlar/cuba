<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.haulmont.cuba.gui.app.core.categories.AttributeColumnEditor"
        messagesPack="com.haulmont.cuba.gui.app.core.categories"
        datasource="columnDs"
        caption="msg://AttributeColumnEditor.caption"
        focusComponent="columnFieldGroup">
    <dsContext>
        <datasource
                id="columnDs"
                class="com.haulmont.cuba.core.entity.CategoryAttributeColumn"
                view="category.edit">
        </datasource>
    </dsContext>
    <layout spacing="true">
        <fieldGroup id="columnFieldGroup" datasource="columnDs" width="100%">
            <field property="name" width="100%"/>
            <field property="code" width="100%"/>
            <field property="format" width="100%"/>
            <field property="width" width="100%"/>
        </fieldGroup>
        <frame id="buttons" screen="editWindowActions"/>
    </layout>
</window>